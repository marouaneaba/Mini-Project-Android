<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abk.tps.InsertPersonne"
    android:background="@drawable/az">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/My_Contact"
                    android:textSize="50px"
                    android:textColor="#C4C"
                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/AppName" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:textColor="#333399"
                    android:textStyle="bold|italic"
                    android:textSize="25dp"
                    android:text="Name :"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView"
                    android:layout_weight="1.01" />

                <EditText
                    android:id="@+id/nameeditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Rentrez le nom"
                    android:inputType="textPersonName"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:textColor="#333399"
                    android:textStyle="bold|italic"
                    android:textSize="25dp"
                    android:text="Prénom :"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView3" />

                <EditText
                    android:id="@+id/prenomeditText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Rentrez le Prénom"
                    android:inputType="textPersonName"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#333399"
                    android:textStyle="bold|italic"
                    android:textSize="25dp"
                    android:text="Tél :"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView4"
                    android:layout_weight="10.86" />

                <EditText
                    android:id="@+id/numeroeditText9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10.86"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Rentrez Numéro"
                    android:inputType="phone"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#333399"
                    android:textStyle="bold|italic"
                    android:textSize="25dp"
                    android:text="Email :"
                    android:layout_height="match_parent"
                    android:id="@+id/textView5"
                    android:layout_weight="0.04"
                    android:layout_width="wrap_content" />

                <EditText
                    android:id="@+id/emaileditText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Rentrez l'email"
                    android:inputType="textEmailAddress"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#333399"
                    android:textStyle="bold|italic"
                    android:textSize="25dp"
                    android:text="Addresse :"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView6" />

                <EditText
                    android:id="@+id/adderesseeditText6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Rentrez l'Addresse"
                    android:inputType="textPersonName"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <TextView
                android:textColor="#333399"
                android:textStyle="bold|italic"
                android:textSize="25dp"
                android:text="Commentaire :"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:id="@+id/textView7" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commentaireeditText7"
                android:layout_weight="1.02"
                android:textAlignment="viewStart" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textStyle="bold|italic"
                    android:textSize="15dp"
                    android:text="Enregistrez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:onClick="Enregistrer"/>

                <Button
                    android:textStyle="bold|italic"
                    android:textSize="15dp"
                    android:text="Vider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:layout_weight="1"
                    android:onClick="vider"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
